<div id="current_user_id" style="visibility: hidden"><%= current_user.id if current_user %></div>

<div id="jams">
	<div id="header">Browse Jams<br>
	{{jams.length}} Jams</div>

	<div class="filter-drop row">

		<div class="col-md-4">
			<div class="btn-group">
			    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter</button>

			    <div class="dropdown-menu">
			        <a v-for="filter in filters" class="dropdown-item" href="#" v-on:click="filterJams(filter)">{{filter}}</a>
			    </div>
			</div>
		</div>
	</div>

	<div class="cells">
			<br>
			 <div name="fade">
			 	<div class="row">
					<div v-for="jam in jams">
						<div class="col-md-4">
				          <div class="well">
				            <div class="item">
				            	<div v-if="userLoggedIn()" class="add">
				            		<div  class="glyphicon glyphicon-plus" v-on:click="addJam(jam)"></div>
				            	</div>
				             <a v-bind:href="'/jams/' + jam.id"><h3>{{jam.name}}</h3></a><br>
				             {{jam.song}}<br>
									{{jam.location}}<br>
									<br>
									<h3><span class="label label-info">{{ showDate(jam) }}</span></h3>
				            </div>
				          </div>
				        </div>
								
					</div>
				</div>
			</div>
		</div>

</div>


<div class="center">
		<% if user_signed_in? %>
				<p>
				<br>
				<button class="btn btn-primary"><%= link_to "Start a Jam!", "/jams/new", method: :get %></button>
				</p>
		<% end %>
</div>


